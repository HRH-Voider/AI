import pandas as pd
import numpy as np
import seaborn as sns
import matplotlib.pyplot as plt

from sklearn.cluster import DBSCAN
from sklearn.preprocessing import StandardScaler
from sklearn.neighbors import NearestNeighbors
from sklearn.metrics import silhouette_score

# ================== LOAD DATA ==================
students = pd.read_csv("spotify_punk_sample.csv")
students_ref = pd.read_csv("hey-oh-river.csv")  # second CSV

# ================== FEATURE SELECTION ==================
feature_cols = ['energy', 'danceability', 'valence']

features = students[feature_cols]
features_ref = students_ref[feature_cols]

# ================== SCALING ==================
scaler = StandardScaler()
features_scaled = scaler.fit_transform(features)
features_ref_scaled = scaler.transform(features_ref)

# ================== REMOVE NaNs ==================
mask = ~np.isnan(features_scaled).any(axis=1)
X_clean = features_scaled[mask]

mask_ref = ~np.isnan(features_ref_scaled).any(axis=1)
X_ref_clean = features_ref_scaled[mask_ref]

# ================== DBSCAN CLUSTERING ==================
clustering = DBSCAN(eps=0.25, min_samples=10)
clustering.fit(X_clean)

students = students.copy()
students["cluster"] = np.nan
students.loc[mask, "cluster"] = clustering.labels_
students["cluster"] = students["cluster"].astype("category")

# ================== SILHOUETTE SCORE ==================
labels = clustering.labels_
non_noise_mask = labels != -1

if len(set(labels[non_noise_mask])) > 1:
    sil_score = silhouette_score(X_clean[non_noise_mask], labels[non_noise_mask])
    print(f"Silhouette Score (excluding noise): {sil_score:.3f}")
else:
    print("Silhouette Score not defined (less than 2 clusters).")

# ================== FIND TOP 3 SONGS CLOSEST TO REFERENCE AVERAGE ==================
# Compute reference average vector
ref_avg = X_ref_clean.mean(axis=0).reshape(1, -1)

# Fit NearestNeighbors on CSV #1
nn = NearestNeighbors(n_neighbors=10, metric="euclidean")
nn.fit(X_clean)

# Find closest songs to reference average
distances, indices = nn.kneighbors(ref_avg)

closest_songs = students.iloc[indices[0]].copy()
closest_songs["distance_to_ref_avg"] = distances[0]

# Exclude noise cluster (-1)
closest_songs_filtered = closest_songs[closest_songs["cluster"] != -1]

# Get top 3 recommendations
top_3_songs = closest_songs_filtered.nsmallest(3, "distance_to_ref_avg")

print("\nTop 3 recommended songs closest to reference average (excluding noise):")
for i, row in top_3_songs.iterrows():
    print(f"- '{row['track']}': Energy={row['energy']}, Danceability={row['danceability']}, "
          f"Valence={row['valence']}, Cluster={row['cluster']}, "
          f"Distance to Avg={row['distance_to_ref_avg']:.3f}")

# ================== CLUSTER SCATTER PLOT WITH REFERENCE SONGS, AVERAGE, AND TOP 3 ==================
plt.figure(figsize=(8, 6))

# Plot DBSCAN clusters
sns.scatterplot(
    data=students,
    x="energy",
    y="danceability",
    hue="cluster",
    palette="tab10",
    alpha=0.8,
    s=70
)

# Plot reference songs
sns.scatterplot(
    data=students_ref,
    x="energy",
    y="danceability",
    color="black",
    marker="X",
    s=100,
    label="Reference Songs"
)

# Plot reference average
plt.scatter(
    scaler.inverse_transform(ref_avg)[0][0],  # unscale energy
    scaler.inverse_transform(ref_avg)[0][1],  # unscale danceability
    color="red",
    marker="D",
    s=200,
    label="Reference Average"
)

# Highlight top 3 recommended songs
plt.scatter(
    top_3_songs["energy"],
    top_3_songs["danceability"],
    color="green",
    marker="o",
    s=200,
    edgecolor="black",
    label="Top 3 Recommendations"
)

# Label the top 3 songs on the plot
for _, row in top_3_songs.iterrows():
    plt.text(row["energy"] + 0.01, row["danceability"] + 0.01, row["track"],
             fontsize=9, fontweight="bold", color="green")

plt.title("DBSCAN Clustering with Reference & Top 3 Recommendations (Excluding Noise)")
plt.xlabel("Energy")
plt.ylabel("Danceability")
plt.legend(bbox_to_anchor=(1.05, 1), loc="upper left")
plt.tight_layout()
plt.show()

# ================== k-DISTANCE PLOT ==================
neigh = NearestNeighbors(n_neighbors=4)
neigh.fit(X_clean)
distances_k, _ = neigh.kneighbors(X_clean)
distances_k = np.sort(distances_k[:, -1])

plt.figure(figsize=(8, 5))
plt.plot(distances_k)
plt.title("k-Distance Plot for DBSCAN (k = 4)")
plt.xlabel("Points (sorted)")
plt.ylabel("4th Nearest Neighbor Distance")
plt.tight_layout()
plt.show()
